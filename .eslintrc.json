{
    "root": true,
    "env": {
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "rules": {
        "prettier/prettier": "error",
        "import/extensions": "never",
        "implicit-arrow-linebreak": 0,
        "quotes": [
            "error",
            "single",
            { 
                "avoidEscape": true, 
                "allowTemplateLiterals": false 
            }
        ]
    }
}
